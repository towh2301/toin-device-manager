{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"jsx": "react",
		"strict": true,
		"paths": {
			"@/*": ["./*"],
			"@src/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@screens/*": ["./src/screens/*"],
			"@assets/*": ["./src/assets/*"],
			"@utils/*": ["./src/utils/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@services/*": ["./src/services/*"],
			"@store/*": ["./src/store/*"],
			"@navigation/*": ["./src/navigation/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"index.ts",
		"src/tamagui.config.ts"
	]
}
